<%# codigo do view para a acao show, esse @movie eh a variavel de instancia do MoviesController %>

<h1>Detalhes sobre <%= @movie.title %></h1>

<div id="metadata">
  <ul id="details">
    <li> Classificação: <%= @movie.rating %> </li>
    <li> Lançado em: <%= @movie.release_date.strftime('%F') %></li>
  </ul>
</div>

<div id="description">
  <h2>Descrição:</h2>
  <p> <%= @movie.description %> </p>
</div>

