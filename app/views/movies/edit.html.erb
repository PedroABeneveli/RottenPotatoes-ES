<h2>Criar um Filme Novo</h2>
<%= form_tag movie_path, :method => :put, :class => 'form' do %>
  <%= label :movie, :title, 'Nome', :class => 'form-control' %>
  <%= text_field :movie, :title, :class => 'form-control' %>
  <%= label :movie, :rating, 'Classificação', :class => 'form-control' %>
  <%= select :movie, :rating, ['G', 'PG', 'PG-13', 'R', 'NC-17'], :class => 'form-control' %>
  <%= label :movie, :release_date, "Lançado em" %>
  <%= date_select :movie, :release_date, :class => 'form-control' %>
  <%= submit_tag 'Salvar' %>
<% end %>