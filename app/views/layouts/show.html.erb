<h1>Detalhes sobre <%= @movie.title %></h1>

<div id="metadata">
  <ul id="details">
    <li> Classificacao Indicativa: <%= @movie.rating %></li>
    <li> Lancado em: <%= @movie.release_date.strftime('%F') %> </li>
  </ul>
</div>

<div id="description">
  <h2>Descricao:</h2>
  <p> <%= @movie.description %> </p>
</div>

<%= link_to 'Editar este filme', edit_movie_path(@movie), :class => 'btn' %>
<%= link_to 'Voltar a lista de filmes', movies_path, :class => 'btn btn-primary' %>